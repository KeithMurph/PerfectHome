                <h1>PerfectHome survey</h1>


				<!-- pet type -->
                <h3>-What kind of pet are you looking for?</h3>
				<form id="pet-preferences" action="/adopt/preferences">
				<select name="type" id="type">
					
					 <option value="Dog">Dog</option>
					<option value="Cat">Cat</option>
					</select>
				
			 
					<!-- home type -->
					<h3>-What kind home will your new pet live in?</h3>
				<select name="house_size" id="house_size">
				
					 <option value="Small">Apartment</option>
					<option value="Large">House</option>
					</select>
				

					<!-- other dogs  -->
					<h3>-Do you currently have dog(s) at home?</h3>
					<select name="good_with_dogs" id="good_with_dogs">
						
						 <option value="true">Yes</option>
						<option value="false">No</option>
						</select>
						

					<!-- other cats -->
					<h3>-Do you currently have cat(s) at home?</h3>
					<select name="good_with_cats" id="good_with_cats">
						
						 <option value="true">Yes</option>
						<option value="false">No</option>
						</select>
						

						<!-- children -->

						<h3>-Do you have children in your home?</h3>
						<select name="good_with_children" id="good_with_children">
							
							 <option value="true">Yes</option>
							<option value="false">No</option>
							</select>
							

							<!-- pet size -->
							<h3>-Does the Size of your new pet matter to you?</h3>
							<select name="size" id="pet_size">
								
								 <option value="Large">Large</option>
								<option value="Medium">Medium</option>
								<option value="Small">Small</option>
								</select>
								

								<!-- pet age -->
								<h3>-Is the age of the pet important to you?</h3>
								<select name="age" id="pet_age">
									
									 <option value="Baby">Baby</option>
									<option value="Young">Young</option>
									<option value="Adult">Adult</option>
									<option value="Senior">Senior</option>
									

									</select>
								
									

									<!-- spayed or neutered  -->
									<h3>-Are you looking for a pet that is already Spayed/Neutered?</h3>
									<select name="spayed" id="spayed">
										
										 <option value="true">Yes</option>
										<option value="false">No</option>
										</select>
									

										<!-- special needs pet -->
										<h3>-Are you willing to take on a special needs pet?</h3>
										<select name="special_needs" id="special_needs">
											
											 <option value="true">Yes</option>
											<option value="false">No</option>
											</select>
											


				<button id="preference-btn" type="submit">Find Pets With These Preferences!</button>
    	</form>							
