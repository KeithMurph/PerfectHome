<div class="all">
	<h1>🐕Find a dog that matches you🏡</h1>
</div>

<!--main body of quiz-->
<div class="all">
	<div class="inline">
		<h1>Perfect Home survey</h1>

		<!-- pet type -->
		<p>What kind of pet are you looking for?</p>
		<select name="petType" id="type">
			<option value="Dog">Dog</option>
			<option value="Cat">Cat</option>
		</select>
		<button id="petTypeBtn">submit</button>
		<p id="typeConfirm"></p>


		<!-- home type -->
		<p>What kind home will your new pet live in?</p>
		<select name="homeType" id="house_size">

			<option value="Apartment">Apartment</option>
			<option value="House">House</option>
		</select>
		<button type="submit" id="homeTypeBtn">submit</button>
		<p id="houseTypeConfirm"></p>

		<!-- yard type -->
		<p>Do you have a yard for your new pet?</p>
		<select name="yardType" id="has_yard">

			<option value="true">Yes</option>
			<option value="false">No</option>
		</select>
		<button type="submit" id="yardTypeBtn">submit</button>
		<p id="yardTypeConfirm"></p>

		<!-- other dogs  -->
		<p>Do you currently have dog(s) at home?</p>
		<select name="otherdog" id="good_with_dogs">

			<option value="true">Yes</option>
			<option value="false">No</option>
		</select>
		<button type="submit" id="otherDogBtn">submit</button>
		<p id="goodWithDogsConfirm"></p>

		<!-- other cats -->
		<p>Do you currently have cat(s) at home?</p>
		<select name="otherCat" id="good_with_cats">

			<option value="true">Yes</option>
			<option value="false">No</option>
		</select>
		<button type="submit" id="otherCatBtn">submit</button>
		<p id="goodWithCatsConfirm"></p>

		<!-- children -->

		<p>Do you have children in your home?</p>
		<select name="children" id="good_with_children">

			<option value="true">Yes</option>
			<option value="fasle">No</option>
		</select>
		<button type="submit" id="childrenBtn">submit</button>
		<p id="goodWithChildrenConfirm"></p>

		<!-- pet size -->
		<p>Does the Size of your new pet matter to you?</p>
		<select name="petSize" id="size">

			<option value="Large">Large</option>
			<option value="Medium">Medium</option>
			<option value="Small">Small</option>
			<option value="">Does not matter</option>
		</select>
		<button type="submit" id="petSizeBtn">submit</button>
		<p id="sizeConfirm"></p>

		<!-- pet age -->
		<p>Is the age of the pet important to you?</p>
		<select name="petAge" id="age">

			<option value="Baby">Baby</option>
			<option value="Young">Young</option>
			<option value="Adult">Adult</option>
			<option value="Senior">Senior</option>
			<option value="">Does not matter</option>

		</select>
		<button type="submit" id="petAgeBtn">submit</button>
		<p id="ageConfirm"></p>

		<!-- declawed -->
		<p>Does your new pet need to be declawed?</p>
		<select name="clawed" id="has_claws">

			<option value="true">Yes</option>
			<option value="fasle">No....</option>
		</select>
		<button type="submit" id="clawedBtn">submit</button>
		<p id="clawConfirm"></p>

		<!-- spayed or neutered  -->
		<p>Are you looking for a pet that is already Spayed/Neutered?</p>
		<select name="spayed" id="spayed">

			<option value="true">Yes</option>
			<option value="false">No</option>
		</select>
		<button type="submit" id="spayedBtn">submit</button>
		<p id="spayedConfirm"></p>

		<!-- speacial needs pet -->
		<p>Are you willing to take on a special needs pet?</p>
		<select name="special" id="special_needs">

			<option value="true">Yes</option>
			<option value="false">No</option>
		</select>
		<button type="submit" id="specialBtn">submit</button>
		<p id="specialConfirm"></p>



	</div>

</div>
</div>

<script src="/js/survey.js"></script>